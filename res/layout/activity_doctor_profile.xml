<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    tools:context=".DoctorProfile">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:src="@drawable/doctor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="2dp">
      <TextView
          android:id="@+id/Name"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_margin="5dp"
          android:text="Name"
          android:textSize="35dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          />
      <TextView
          android:id="@+id/Specialization"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:text="Specialization"
          android:layout_margin="5dp"
          android:textColor="@color/black"
          />
      <TextView
          android:id="@+id/City"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:text="City"
          android:layout_margin="5dp"
          android:textColor="@color/black"
          />
      <TextView
          android:id="@+id/Contact"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:text="03184562933"
          android:layout_margin="5dp"
          android:textColor="@color/black"
          />

    </LinearLayout>



  </LinearLayout>


  <TextView
      android:id="@+id/text3"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:text="I am a passionate and dedicated [Your Specialty] doctor with [number] years of experience. My goal is to provide personalized and compassionate care to all my patients. I believe in a holistic approach to healthcare, focusing on both the physical and emotional well-being of my patients.\n\nðŸŽ“ Education and Training:\n
   - [Degree], [Medical School], [Year]\n    - [Residency Program], [Year]"
      android:layout_margin="5dp"
      />
  <TextView
      android:id = "@+id/text4"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:text="[Clinic/Hospital Name]"
      android:textSize="20dp"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      />
  <TextView
      android:id="@+id/text5"
      android:layout_width="match_parent"
      android:layout_height="20dp"
      android:text="[Street Address], [City], District Mirpurkhas, Sindh, Pakistan"
      android:layout_margin="5dp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:orientation="horizontal"

      >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_weight="3"
        android:src="@drawable/doctorroom"/>
    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="109dp"
        android:layout_height="180dp"
        android:src="@drawable/googlemapicon"
        android:background="@color/white"
        android:layout_weight="1.7"
        android:scaleType="centerInside"/>

  </LinearLayout>

  <TextView
      android:id="@+id/text6"
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:text="Availability Time\nMon: 10:00 AM to 05:00 PM\nTue: 10:00 AM to 05:00 PM\nWed: 10:00 AM to 05:00 PM\nThu: 10:00 AM to 05:00 PM\nFri: Close\nSat: 12:00 AM to 08:00 PM\nSun: 12:00 AM to 08:00 PM"
      android:layout_margin="5dp"
      />
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnRequestForAppointment"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/teal"
      android:textColor="@color/white"
      android:text="Request for Appointment"
      android:layout_marginTop="10dp"/>


  </LinearLayout>